<script>
    var lastScrollTop = 0;
    $(window).scroll(function () {
        var st = $(this).scrollTop();
        if (st > lastScrollTop) {
            // downscroll code
            $('.nav').fadeOut(800);
            // $('.nav').css('right', '-');
        } else {
            // upscroll code
            $('.nav').fadeIn(800)
        }
        lastScrollTop = st;
    });

    $("#trigger").change(function () {
        if ($("#trigger").is(":checked")) {
            $('.nav').fadeOut(500);
        }
        else {
            $('.nav').fadeIn(500)
        }
    });
</script>