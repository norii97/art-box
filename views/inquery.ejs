<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Q & A</title>
    <!-- cdn links -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous">
    </script>
    <!-- css links -->
    <link rel="stylesheet" href="static/css/navbar.css">
    <link rel="stylesheet" href="static/css/inquery.css">
</head>
<body>
  <%-include('navbar');%>
  
  <img id="qnaImage" src="static/img/qna.jpeg" alt="" >
  <!-- qna 및 문의 사항 화면. 해당 버튼 클릭시 화면이 바뀜. -->
  <div class="container">
    <div class="row">
      <div class="col-2 d-flex justify-content-start flex-column mt-5" id="navCol">
        <button class="btn btn-light" type="button" id="qnaBtn">
          Q&A
        </button>
        <button class="btn btn-light mt-2" type="button" id="inqueryBtn">
          문의하기
        </button>
      </div>
      <div class="col-9 ms-3">
        <!-- Q&A 부분 -->
        <div id="qnaDiv" class="mt-3">
          <h3>Q&A</h3>
          <div class="d-flex flex-column justify-content-between" id="arcAndPagination">
            <div class="accordion accordion-flush" id="accordionFlushQnA">
              <% for(let i=0; i < listQnA.length; i++){ %>
                <div class="accordion-item">
                  <h2 class="accordion-header" id="flush-qna-heading<%=i%>">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-qna-collapse<%=i%>" aria-expanded="false" aria-controls="flush-qna-collapse<%=i%>">
                      <%=listQnA[i].btn; %>
                    </button>
                  </h2>
                  <div id="flush-qna-collapse<%=i%>" class="accordion-collapse collapse" aria-labelledby="flush-qna-heading<%=i%>" data-bs-parent="#accordionFlushQnA">
                    <div class="accordion-body bgColorGray">
                      <%=listQnA[i].content; %>
                    </div>
                  </div>
                </div>
              <% } %>
            </div>
            <!-- pagination -->
            <nav aria-label="Page navigation" id="pageNav">
              <ul class="pagination justify-content-center">
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
                <li class="page-item"><a class="page-link" href="#arcAndPagination">1</a></li>
                <li class="page-item"><a class="page-link" href="#arcAndPagination">2</a></li>
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                  </a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
        <!-- 문의 사항 부분 -->
        <div id="inqueryDiv" class="mt-3 mb-5">
          <form action="">
            <label for="q-select">
                <h3>
                    문의 사항:
                </h3>
            </label>
            <select name="question" id="q-select" class="form-select">
                <option value="">--Please choose an option--</option>
                <option value="errorInform">자료 정보 오류 확인</option>
                <option value="webBug">웹 버그 확인</option>
                <option value="etc">기타 사항</option>
            </select>
            <div class="input-group mt-2 mb-2">
              <span class="input-group-text">상세 내용 기입:</span>
              <textarea class="form-control" aria-label="With textarea" rows="10"></textarea>
            </div>
            <div class="mb-3">
              <label for="formFileMultiple" class="form-label">오류 캡쳐 파일</label>
              <input class="form-control" type="file" id="formFileMultiple" multiple accept=".gif,.jpg,.jpeg,.png">
            </div>
            <button id="inqueryBtn" class="btn btn-secondary" type="submit">문의하기</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  <script>
    const btn = document.querySelectorAll('button');
    const qna = document.querySelector('#qnaDiv');
    const inquery = document.querySelector('#inqueryDiv');
    
    qna.hidden = false;
    inquery.hidden = true;

    function handleNavScreen(event) {
      const btnId = event.path[0].attributes[2].value;
      console.log(btnId);

      if(btnId === 'qnaBtn'){
        qna.hidden = false;
        inquery.hidden = true;
      } else {
        qna.hidden = true;
        inquery.hidden = false;
      }
    } 

    btn[0].addEventListener('click', handleNavScreen);
    btn[1].addEventListener('click', handleNavScreen);
  </script>
</body>
</html>
